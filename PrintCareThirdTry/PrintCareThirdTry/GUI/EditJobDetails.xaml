		<Button Content="Cancel" HorizontalAlignment="Right" Height="27" Margin="0,0,70,21" VerticalAlignment="Bottom" Width="68"/>
		<Button Content="Reset" HorizontalAlignment="Right" Height="27" Margin="0,0,142,21" VerticalAlignment="Bottom" Width="68"/>
		<Button Content="Save" Height="27" Margin="153,0,213,21" VerticalAlignment="Bottom"/>
		<Button Content="Open" HorizontalAlignment="Right" Height="32" Margin="0,148,79,0" VerticalAlignment="Top" Width="73"/>
	</Grid>
</Window>